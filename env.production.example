# Production Environment Variables
# Copy this file to .env.local and update with your production values

# Database - Use your production PostgreSQL URL
DATABASE_URL="postgresql://username:password@host:port/database"

# NextAuth - CRITICAL: Use strong secrets in production
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="your-super-secure-nextauth-secret-key-min-32-chars"

# Security - CRITICAL: Use strong secrets in production
JWT_SECRET="your-super-secure-jwt-secret-key-min-32-chars"
CSRF_SECRET="your-super-secure-csrf-secret-key-min-32-chars"
BCRYPT_ROUNDS=12

# Admin credentials - CHANGE THESE IN PRODUCTION
ADMIN_EMAIL="admin@your-domain.com"
ADMIN_PASSWORD="YourSecureAdminPassword123!"
ADMIN_PHONE="+1234567890"

# Twilio SMS Configuration (REQUIRED for production OTP sending)
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"
# Note: These are REQUIRED in production. OTP will not be sent if not configured.

# File upload settings
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="image/jpeg,image/png,application/pdf"
UPLOAD_DIR="./uploads"

# Storj DCS Configuration (Optional - will fallback to local upload)
STORJ_ACCESS_KEY_ID="your-storj-access-key"
STORJ_SECRET_ACCESS_KEY="your-storj-secret-key"
STORJ_ENDPOINT="https://gateway.storjshare.io"
STORJ_REGION="us-east-1"
STORJ_BUCKET_NAME="your-bucket-name"

# Email Configuration
GMAIL_USER="your-email@gmail.com"
GMAIL_APP_PASSWORD="your-gmail-app-password"

# Production optimizations
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
